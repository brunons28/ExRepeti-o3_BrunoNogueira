package exrepetição4_brunonogueira;

import java.util.Scanner;

/**
 *
 * @author Lenovo
 */
public class ExRepetição4_BrunoNogueira {

 
 
    public static void main(String[] args) {
       Scanner Conversor = new Scanner(System.in);
        double Celsius, Fahrenheit;
        int  i=1;
                
        System.out.println("Digite u valor em graus celsius: ");
        Celsius = Conversor.nextInt();
        
        Fahrenheit = (Celsius * 1.8 + 32);
        System.out.println("A temperatura em Fahrenheit é:\n " +Fahrenheit);
        
        do
        {
             Fahrenheit = Fahrenheit + 10; i++;
        if(i!=10)
        {
          System.out.println("A temperatura em Fahrenheit é:\n " +Fahrenheit);
        }    
        while(i<=10)
    }
    
}
